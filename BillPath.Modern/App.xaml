<Application
    x:Class="BillPath.Modern.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BillPath.Modern"
    xmlns:viewModels="using:BillPath.UserInterface.ViewModels"
    xmlns:converters="using:BillPath.Modern.Converters"
    xmlns:repositories="using:BillPath.DataAccess.Xml">
    <Application.Resources>
        <ResourceDictionary>
            <viewModels:SettingsViewModel
                x:Key="SettingsViewModel">
                <viewModels:SettingsViewModel.Repository>
                    <repositories:SettingsRepository>
                        <repositories:SettingsRepository.FileProvider>
                            <local:ModernAppFileProvider
                                FileName="test" />
                        </repositories:SettingsRepository.FileProvider>
                    </repositories:SettingsRepository>
                </viewModels:SettingsViewModel.Repository>
            </viewModels:SettingsViewModel>

            <converters:LocalizationConverter
                x:Key="LocalizationConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
